generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Team {
  id        String     @id @default(cuid())
  name      String     @unique
  users     User[]
  templates Template[]
  runs      Run[]
  createdAt DateTime   @default(now())
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  team        Team     @relation(fields: [teamId], references: [id])
  teamId      String
  // ⬇️ motsatt side av Run.startedBy
  startedRuns Run[]    @relation("UserStartedRuns")
  createdAt   DateTime @default(now())
}

model Template {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    String
  name      String
  tasks     Task[]
  // ⬇️ motsatt side av Run.template
  runs      Run[]    @relation("TemplateRuns")
  createdAt DateTime @default(now())
}

model Task {
  id         String    @id @default(cuid())
  template   Template  @relation(fields: [templateId], references: [id])
  templateId String
  title      String
  order      Int
  // ⬇️ motsatt side av RunItem.task
  runItems   RunItem[] @relation("TaskRunItems")
}

model Run {
  id          String    @id @default(cuid())
  team        Team      @relation(fields: [teamId], references: [id])
  teamId      String
  // ⬇️ eksplisitt navn matcher Template.runs
  template    Template  @relation("TemplateRuns", fields: [templateId], references: [id])
  templateId  String
  // ⬇️ eksplisitt navn matcher User.startedRuns
  startedBy   User      @relation("UserStartedRuns", fields: [startedById], references: [id])
  startedById String
  status      String    @default("in_progress")
  startedAt   DateTime  @default(now())
  finishedAt  DateTime?
  items       RunItem[]
}

model RunItem {
  id          String    @id @default(cuid())
  run         Run       @relation(fields: [runId], references: [id])
  runId       String
  // ⬇️ eksplisitt navn matcher Task.runItems
  task        Task      @relation("TaskRunItems", fields: [taskId], references: [id])
  taskId      String
  title       String
  checkedById String?
  checkedAt   DateTime?
  note        String?
}
